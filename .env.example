# Environment Configuration
NODE_ENV=development
PORT=3000

# Application Configuration
APP_NAME=Autochek Backend API
APP_VERSION=1.0.0
APP_PREFIX=api/v1

# Database Configuration
DB_TYPE=sqlite
DB_DATABASE=:memory:
DB_SYNCHRONIZE=true
DB_LOGGING=true

# External API Configuration
RAPID_API_KEY=your_rapid_api_key_here
RAPID_API_HOST=car-utils.p.rapidapi.com
VIN_DECODER_API_URL=https://car-utils.p.rapidapi.com/vininfo
VALUATION_API_URL=https://car-utils.p.rapidapi.com/marketvalue

# Security Configuration
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Logging Configuration
LOG_LEVEL=info